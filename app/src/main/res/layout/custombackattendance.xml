<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/related_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assign_back">

        <TextView
            android:id="@+id/stu_name_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:text="Shivam Mathur"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#1976D2"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/stu_roll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/stu_name_back"
            android:layout_marginLeft="9dp"
            android:text="12emdcs009"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/attendance_back"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Kyu Batau"
            android:gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/stu_roll_back" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#1976D2"></LinearLayout>

</FrameLayout>