<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/uniform_lab"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:id="@+id/abc"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uniform_lab"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout8" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shivam Mathur"
            android:id="@+id/stu_name_lab"
            android:textColor="#1976D2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="9dp"
            android:gravity="left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12emdcs009"
            android:textColor="@color/black"
            android:id="@+id/stu_roll_lab"
            android:layout_alignBottom="@+id/stu_name_lab"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="9dp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/uniform_lab"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout9" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Viva"
            android:id="@+id/textView2"
            android:layout_below="@+id/stu_name_lab"
            android:layout_alignLeft="@+id/stu_name_lab"
            android:layout_alignStart="@+id/stu_name_lab"
            android:layout_alignBottom="@+id/zero"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="9dp" />
<RadioGroup
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:id="@+id/group">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/zero"
            android:checked="false"
            android:layout_below="@+id/stu_name_lab"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.25"
            android:id="@+id/twenttfive"
            android:layout_below="@+id/space2"
            android:layout_toRightOf="@+id/zero"
            android:layout_toEndOf="@+id/zero"
            android:checked="false"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.50"
            android:id="@+id/fiifty"
            android:checked="false"
            android:layout_below="@+id/radioGroup"
            android:layout_alignRight="@+id/file_lab"
            android:layout_alignEnd="@+id/file_lab"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.75"
            android:id="@+id/seventyfive"
            android:layout_alignTop="@+id/fiifty"
            android:layout_toRightOf="@+id/fiifty"
            android:layout_toEndOf="@+id/fiifty"
            android:checked="false"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.00"
            android:id="@+id/one"
            android:checked="false"
            android:layout_alignTop="@+id/seventyfive"
            android:layout_toRightOf="@+id/seventyfive"
            android:layout_toEndOf="@+id/seventyfive"
            android:layout_weight="1" />
</RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uniform_lab"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout10" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uniform"
            android:textColor="@color/black"
            android:id="@+id/uniform_lab"
            android:checked="false"
            android:textSize="10dp"
            android:layout_below="@+id/stu_name_lab"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="9dp"
            android:layout_weight="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab"
            android:id="@+id/lab_lab"
            android:checked="false"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/attendance_lab"
            android:layout_toRightOf="@+id/fiifty"
            android:layout_toEndOf="@+id/fiifty"
            android:layout_weight="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance"
            android:id="@+id/attendance_lab"
            android:checked="false"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_alignTop="@+id/uniform_lab"
            android:layout_toLeftOf="@+id/lab_lab"
            android:layout_toStartOf="@+id/lab_lab"
            android:layout_weight="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:id="@+id/file_lab"
            android:checked="false"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_below="@+id/space2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="74dp"
            android:layout_marginEnd="74dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>