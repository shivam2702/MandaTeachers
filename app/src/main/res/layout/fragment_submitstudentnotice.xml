<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="templates.yogeshbalan.com.navigationdrawertemplatee.fragments.submitstudentnotice">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context="templates.yogeshbalan.com.navigationdrawertemplatee.fragments.submitnoticefaculty">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Notice For ?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="#1976D2"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/groupnotice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/teacher"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Student"
                    android:background="#1976D2"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/stuno"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="138dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="Teacher"
                    android:background="#1976D2"
                    android:textColor="#FFFFFF" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/stuno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout11"
            android:layout_weight="0.11"
            android:gravity="bottom"
            android:hint="Enter Student&apos;s Notice"
            android:textAlignment="center" />

    </RelativeLayout>

    <Button
        android:id="@+id/submitno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stuno"
        android:layout_marginTop="101dp"
        android:text="Submit Student Notice" />
</LinearLayout>
